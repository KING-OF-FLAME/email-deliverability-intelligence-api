# Disable directory browsing
Options -Indexes

# Security Headers (RapidAPI safe)
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# Enable Rewrite Engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # ===== Allow RapidAPI Requests Explicitly =====
    # RapidAPI sends: User-Agent: RapidAPI or rapidapi
    RewriteCond %{HTTP_USER_AGENT} (RapidAPI|rapidapi) [NC]
    RewriteRule .* - [L]

    # Preserve Authorization header (VERY IMPORTANT)
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Block sensitive files
    RewriteRule ^\.env$ - [F,L]
    RewriteRule ^composer\.(json|lock)$ - [F,L]
    RewriteRule ^\.git - [F,L]

    # Route all requests to index.php
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>
